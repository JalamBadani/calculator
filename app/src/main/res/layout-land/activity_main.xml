<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn2nd"
                    style="@style/OperationButton"
                    android:text="2nd" />
                <Button
                    android:id="@+id/btnRad"
                    style="@style/OperationButton"
                    android:text="Rad" />
                <Button
                    android:id="@+id/btnJazr"
                    style="@style/OperationButton"
                    android:text="Jazr" />



                <Button
                    android:id="@+id/btnRadical"
                    style="@style/OperationButton"
                    android:text="#" />
                <Button
                    android:id="@+id/btnex"
                    style="@style/OperationButton"
                    android:text="#" />
                <Button
                    android:id="@+id/btnPrecent"
                    style="@style/OperationButton"
                    android:text="%" />
                <Button
                    android:id="@+id/btnClean"
                    style="@style/OperationButton"
                    android:text="C" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSin"
                    style="@style/OperationButton"
                    android:text="sin" />
                <Button
                    android:id="@+id/btnCos"
                    style="@style/OperationButton"
                    android:text="cos" />
                <Button
                    android:id="@+id/btnTan"
                    style="@style/OperationButton"
                    android:text="tan" />

                <Button
                    android:id="@+id/btn7"
                    style="@style/NumberButton"
                    android:text="7"
                    />
                <Button
                    android:id="@+id/btn8"
                    style="@style/NumberButton"
                    android:text="8" />
                <Button
                    android:id="@+id/btn9"
                    style="@style/NumberButton"
                    android:text="9" />
                <Button
                    android:id="@+id/btnDivide"
                    style="@style/OperationButton"
                    android:text="/" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnLn"
                    style="@style/OperationButton"
                    android:text="ln" />
                <Button
                    android:id="@+id/btnLog"
                    style="@style/OperationButton"
                    android:text="log" />
                <Button
                    android:id="@+id/btn1x"
                    style="@style/OperationButton"
                    android:text="1/x" />

                <Button
                    android:id="@+id/btn4"
                    style="@style/NumberButton"
                    android:text="4" />
                <Button
                    android:id="@+id/btn5"
                    android:text="5"
                    style="@style/NumberButton"
                    />
                <Button
                    android:id="@+id/btn6"
                    style="@style/NumberButton"
                    android:text="6" />
                <Button
                    android:id="@+id/btnMultiply"
                    style="@style/OperationButton"
                    android:text="*" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnEx"
                    style="@style/OperationButton"
                    android:text="ex" />
                <Button
                    android:id="@+id/btnX2"
                    style="@style/OperationButton"
                    android:text="x2" />
                <Button
                    android:id="@+id/btnXY"
                    style="@style/OperationButton"
                    android:text="xy" />




                <Button
                    android:id="@+id/btn1"
                    style="@style/NumberButton"
                    android:text="1" />
                <Button
                    android:id="@+id/btn2"
                    style="@style/NumberButton"
                    android:text="2" />
                <Button
                    android:id="@+id/btn3"
                    style="@style/NumberButton"
                    android:text="3" />
                <Button
                    android:id="@+id/btnMinuse"
                    style="@style/OperationButton"
                    android:text="-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnghx"
                    style="@style/OperationButton"
                    android:text="|x|" />
                <Button
                    android:id="@+id/btnPi"
                    style="@style/OperationButton"
                    android:text="pi" />
                <Button
                    android:id="@+id/btnE"
                    style="@style/OperationButton"
                    android:text="e" />





                <Button
                    android:id="@+id/btndot"
                    style="@style/NumberButton"
                    android:text="." />
                <Button
                    android:id="@+id/btnZero"
                    style="@style/NumberButton"
                    android:text="0" />
                <Button
                    android:id="@+id/btnEqual"
                    style="@style/OperationButton"
                    android:text="=" />
                <Button
                    android:id="@+id/btnSum"
                    style="@style/OperationButton"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>